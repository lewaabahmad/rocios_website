%form#payment-form{:action => "/purchase", :method => "post"}
  = tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token)
  %div
    %label{:for => "name"} Name:
    %input#name{:type => "text"}
  %div
    %label{:for => "mail"} E-mail:
    %input#mail{:type => "email"}
  %div
    %label{:for => "msg"} Street Address Line 1:
    %input#msg
  %div
    %label{:for => "msg"} Street Address Line 2:
    %input#msg
  %div
    %label{:for => "msg"} City:
    %input#msg
  %div
    %label{:for => "msg"} State:
    %input#msg
  %div
    %label{:for => "msg"} Zip Code:
    %input#msg
  %div
    %label{:for => "msg"} Apartment:
    %input#msg

  %div
    %label{:for => "msg"} Card Number:
    %input#msg
  %div
    %label{:for => "msg"} CVC:
    %input#msg
  %div
    %label{:for => "msg"} Expiration Date:
    %input#msg

  %button{:type => "submit"} Submit Payment
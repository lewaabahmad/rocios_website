#myModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
        %h4#myModalLabel.modal-title 
          = "Purchase #{@piece.title}"
      .modal-body
        %iframe{src:"/purchase/new"} 
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button"} Submit
#art-show-card
  %h3
    = @piece.title
  %h4
    = @piece.tagline
  %p
    = @piece.description
  - if @piece.limited
    %h5.limited
      limited
  %h5.cost
    = @piece.price
  %img{src: @piece.image_url }
  %button.btn.btn-primary.btn-lg{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}
    Buy Now